<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_title_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ivLogo"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/share_tech_mono_regular"
        android:text="@string/title_ecostep"
        android:textColor="@color/main_text_color"
        android:textSize="48sp"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="37dp" />

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="176dp"
        android:layout_height="176dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ecostep_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_signup" />
</androidx.constraintlayout.widget.ConstraintLayout>


