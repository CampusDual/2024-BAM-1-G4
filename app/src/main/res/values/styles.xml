<resources>
    <!--    Button Style-->
    <style name="PrimaryButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/clear_text_color</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:backgroundTint">@color/main_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <!--    Button Social Login Style-->
    <style name="SocialLoginButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:backgroundTint">@color/cardview_light_background</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">23dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/border_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">0dp</item>
        <item name="android:translationZ">0dp</item>

    </style>

    <!-- TextInputLayout Style -->

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/background_text_input</item>
        <item name="boxStrokeColor">@color/main_text_color</item>
        <item name="hintTextColor">@color/main_text_color</item>
        <item name="startIconTint">@color/main_text_color</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <!-- TextInputEditText Style -->

    <style name="TextInputEditTextStyle">
        <item name="android:background">@color/background_text_input</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:padding">4dp</item>
    </style>

    <color name="border_color">#2E000000</color>
</resources>


